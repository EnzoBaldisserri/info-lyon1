{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} - Connexion{% endblock %}
{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/login.css') }}">
{% endblock %}

{% block body %}
    <div class="center-align">
        <img id="logo_info-lyon1"
            src="{{ asset('images/logo_800.png')}}"
            alt="info-lyon1"
            class="responsive-img center-block"
        />
        <form action="{{ path('login_check') }}" method="post">
            {% if error is not null %}
            <div id="error" class="center-block">
                <span class="error">{{ error.message }}</span>
            </div>
            {% endif %}
            <div class="input-field center-block">
                <i class="material-icons prefix text-white">account_circle</i>
                <input
                    id="username"
                    name="_username"
                    type="text"
                    value="{{ last_username }}"
                />
                <label for="username">Identifiant</label>
            </div>
            <div class="input-field center-block">
                <i class="material-icons prefix">lock</i>
                <input
                    id="password"
                    name="_password"
                    type="password"
                />
                <label for="password">Mot de passe</label>
            </div>
            <div>
                <label>
                    <input id="remember_me" name="_remember_me" type="checkbox" />
                    <span>Rester connect√©</span>
                </label>
            </div>
            <p class="center-align">
                <button class="btn yellow accent-4 waves-effect waves-light" type="submit">Se connecter</button>
            </p>
        </form>
    </div>
{% endblock %}
