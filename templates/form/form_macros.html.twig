{% macro actions(button_label, back_path, back_text) %}
    <div class="flex-row flex-nowrap">
        <button type="submit" class="btn btn-flat waves-effect waves-light">
            {{ button_label }}
        </button>
        <a href="{{ back_path }}" class="btn btn-flat waves-effect waves-light">
            {{ back_text }}
        </a>
    </div>
{% endmacro %}
