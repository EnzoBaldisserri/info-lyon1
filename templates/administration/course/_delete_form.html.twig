<form
    method="post"
    action="{{ path('administration_course_delete', {'id': course.id}) }}"
    onsubmit="return confirm('{{ 'course.form.delete.confirm'|trans }}');"
>
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ course.id) }}">
    <button type="submit" class="btn-flat waves-effect waves-red">
        <i class="material-icons action-icon">delete</i>
    </button>
</form>
