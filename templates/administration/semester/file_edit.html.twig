{% extends 'base.html.twig' %}

{% block page_title %}
    <div>
        <h2>{{ 'semester.form.edit.title'|trans }}</h2>
        <a href="{{ path('administration_semester_edit', { 'id' : semester.id }) }}">
            {{ 'semester.message.with_form.edit'|trans }}
        </a>
    </div>
{% endblock %}

{% block body %}
    <div class="card grey lighten-5">
        {{ form_start(form) }}
            <div class="card-content">
                {{ form_row(form.attachment) }}
            </div>
            <div class="card-action">
                <button type="submit" class="btn btn-flat waves-effect waves-green">
                    {{ 'global.button.send'|trans }}
                </button>
                <a  href="{{ path('administration_semester_generate_file', { 'id': semester.id }) }}"
                    class="btn btn-flat waves-effect waves-light"
                >
                    {{ 'semester.form.edit.download'|trans }}
                </a>
            </div>
        {{ form_end(form) }}
    </div>
{% endblock %}
