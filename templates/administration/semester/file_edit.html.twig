{% import 'form/form_macros.html.twig' as forms %}

{% extends 'base.html.twig' %}

{% block page_title %}
    <div>
        <h2>{{ 'semester.form.edit.title'|trans }}</h2>
        <a href="{{ path('administration_semester_edit', { 'id' : semester.id }) }}">
            {{ 'semester.message.with_form.edit'|trans }}
        </a>
    </div>
{% endblock %}

{% block body %}
    {{ form_start(form) }}
        {{ form_row(form.attachment) }}

        {{ forms.actions('global.button.send'|trans, [
            [path('administration_semester_generate_file', { 'id': semester.id }), 'semester.form.edit.download'|trans],
            [path('administration_index'), 'administration.message.come_back'|trans],
        ]) }}
    {{ form_end(form) }}
{% endblock %}
