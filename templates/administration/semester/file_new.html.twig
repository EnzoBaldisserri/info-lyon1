{% extends 'base.html.twig' %}

{% block page_title %}
    <div>
        <h2>{{ 'semester.form.new.title'|trans }}</h2>
        <a href="{{ path('administration_semester_new') }}">
            {{ 'semester.message.with_form.new'|trans }}
        </a>
    </div>
{% endblock %}

{% block body %}
    <div class="card">
        {{ form_start(form) }}
            <div class="card-content">
                {{ form_row(form.attachment) }}
            </div>
            <div class="card-action">
                <button type="submit" class="btn btn-flat waves-effect waves-green">
                    {{ 'global.button.send'|trans }}
                </button>
                <a href="{{ path('administration_semester_generate_sample') }}"
                   class="btn btn-flat waves-effect waves-light">
                    {{ 'semester.form.new.download'|trans }}
                </a>
            </div>
        {{ form_end(form) }}
    </div>
{% endblock %}
